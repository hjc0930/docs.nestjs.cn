{
  "name": "nestjsdocs",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rspress build && cp -r public/assets doc_build/ 2>/dev/null || true",
    "dev": "rspress dev",
    "preview": "rspress preview",
    "fix-code-blocks": "node scripts/fix-code-blocks-v2.cjs",
    "fix-template-syntax": "node scripts/fix-template-syntax.cjs",
    "fix-all": "npm run fix-code-blocks && npm run fix-template-syntax",
    "translate-docs": "node scripts/translate-docs.cjs",
    "translate-docs:verbose": "node scripts/translate-docs.cjs --verbose",
    "translate-docs:no-ai": "node scripts/translate-docs.cjs --no-ai",
    "translate-docs:mistral": "node scripts/translate-docs.cjs --model @cf/mistral/mistral-7b-instruct-v0.1 --verbose",
    "translate-docs:openchat": "node scripts/translate-docs.cjs --model @cf/openchat/openchat-3.5-0106 --verbose",
    "post-translate": "node scripts/post-translate-processor.cjs",
    "post-translate:verbose": "node scripts/post-translate-processor.cjs --verbose",
    "sync-and-translate": "npm run translate-docs && npm run fix-all",
    "sync-and-translate:no-ai": "npm run translate-docs:no-ai && npm run fix-all",
    "update-sync-time": "node scripts/update-sync-time.cjs",
    "test-cloudflare": "node test-cloudflare-translate.js",
    "check-links": "node scripts/check-internal-links.cjs"
  },
  "dependencies": {
    "@rspress/core": "^2.0.3",
    "glob": "^11.1.0",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "markdown-link-check": "^3.14.2"
  }
}